<h2>Update Report</h2>
<br>
<hr>
<form action="/reports/update/<%= report._id %>" method="POST">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= report.title %>"><br>
    <label for="body">Body</label>
    <textarea rows="12" cols="25" name="body" value="<%= report.body %>"></textarea><br>
    <label for="message">Message</label>
    <textarea rows="12" cols="25" name="message" value="<%= report.message %>"></textarea><br>
    <input type="submit" value="Update">
</form>