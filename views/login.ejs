<div class="container  mt-5 pt-5">
  <h3 class="text-success justify-content-center align-items-center d-flex">Employee Report Tracker</h3>
<div class="row mt-2">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h3 class="text-center text-bg-secondary mb-3"><i class="fas fa-key"></i>Login</h3>
        <%= include ("./partials/messages") %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-sm btn-primary btn-success mt-2">Login</button>
        </form>
        <p class="lead mt-4 text-success">
          New User? <a href="register">Register</a>
        </p>
      </div>
    </div>
  </div>
</div>




